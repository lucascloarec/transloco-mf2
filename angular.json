{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "cli": {
        "packageManager": "pnpm",
        "schematicCollections": ["angular-eslint"]
    },
    "newProjectRoot": "projects",
    "projects": {
        "ngx-transloco-mf2": {
            "projectType": "library",
            "root": "projects/ngx-transloco-mf2",
            "sourceRoot": "projects/ngx-transloco-mf2/src",
            "prefix": "lib",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "project": "projects/ngx-transloco-mf2/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ngx-transloco-mf2/tsconfig.lib.prod.json"
                        },
                        "development": {
                            "tsConfig": "projects/ngx-transloco-mf2/tsconfig.lib.json"
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "tsConfig": "projects/ngx-transloco-mf2/tsconfig.spec.json",
                        "polyfills": ["zone.js", "zone.js/testing"]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": [
                            "projects/ngx-transloco-mf2/**/*.ts",
                            "projects/ngx-transloco-mf2/**/*.html"
                        ],
                        "eslintConfig": "projects/ngx-transloco-mf2/eslint.config.js"
                    }
                }
            }
        }
    }
}
